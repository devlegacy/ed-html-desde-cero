extends ../../templates/base.pug
block config
  - const baseOpenGraphImage1200x1200  = require('../../../../assets/img/dist/opengraph/opengraph-1200x1200.jpg');
  - const baseOpenGraphImage1200x640  = require('../../../../assets/img/dist/opengraph/opengraph-1200x640.png');
  - const linkToHumansTXT     = require('../../../../humans.txt');
block header
  header
    h1 Mi primera página web | Módulo 8 - formularios
block main
  h2 Formularios

  form(action="")
    div
      label(for="name") Nombre:
      input#name(type="text", name="", placeholder="Nombre", required)
    div
      label() Apellido:
        input(type="text")
    div
      label() Contraseña:
        input(type="password")
    div
      label Correo
        input(type="email", name="")
    div
      label Fecha de nacimiento
        input(type="date", name="")
    div
      label Cantidad
        input(type="number", name="", value=4, readonly)
    fieldset
      legend Tus datos personales
      div
        label Nombre
          input(type="email", name="")
      div
        label Correo
          input(type="email", name="")
    fieldset
      legend Tus datos en la plataforma
      div
        label Nombre
          input(type="email", name="")
      div
        label Correo
          input(type="email", name="")
    fieldset
      legend Pasatiempos
      div
        label
          input(type="checkbox", name="")
          | Caminar
          input(type="checkbox", name="")
          | Correr
          input(type="checkbox", name="")
          | Música
          input(type="checkbox", name="")
          | Guitarra
    fieldset
      legend Genero
      div
        label
          input(type="radio", name="gender")
          | Masculino
          input(type="radio", name="gender")
          | Femenino
    fieldset
      legend Select y opciones
      div
        label() Escoge tu país
          select(name="country")
            optgroup(label="America")
              option(value="pe") Perú
              option(value="co") Colombia
              option(value="ve") Venezuela
            optgroup(label="Europa")
              option(value="es") España
              option(value="it") Italia
      div
        textarea(name="", cols="30", rows="10", placeholder="comentarios")
    button(type="submit") Enviar
    button(type="reset") Reset
